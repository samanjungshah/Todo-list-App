    <title>To Do list</title>
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <div class="box" id = "heading">
        <h1> <%= kindOfDay%> </h1>

    </div>
    
    <div class="box">
        
            <%for(var i =0;i<newListItem.length;i++){
                %>
                <div class="item">
                    <input type="checkbox" >
                    <p> <%= newListItem[i] %></p>
                </div> 
                <%
            }%>
            
    <form action="/" class="item" method="post">
        <input type="text" name="newItem" placeholder="Add to Todo List"  autocomplete="off">
        <button type="submit">+</button>
    </form>
        
           
        
    </div>
    
    

    
    
